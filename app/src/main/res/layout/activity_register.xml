<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    >
    <LinearLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/rl_back_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.3"
            android:padding="@dimen/margin_left10"
            >

            <Button
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:background="@mipmap/img_back" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.6"
            android:padding="@dimen/margin_left10" >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="注册"
                android:layout_marginTop="@dimen/qav_title_margin_top"
                android:textColor="@color/yellow"
                android:textSize="26sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_save"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2" >

        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_login_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_middle">

        <EditText
            android:id="@+id/edt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_edt_bg"
            android:gravity="center_vertical"
            android:textColorHint="@color/white"
            android:hint="@string/login_name_hint"
            android:paddingLeft="@dimen/margin_right"
            android:textSize="16sp"
            android:inputType="phone"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_psw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_login_name"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_right"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edt_psw"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:background="@mipmap/img_edt_bg"
            android:hint="@string/login_psw_hint"
            android:textColorHint="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_right"
            android:textSize="16sp"
            android:inputType="phone"
            android:textColor="@color/white"/>

        <Button
            android:id="@+id/btn_code"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left"
            android:layout_weight="0.4"
            android:background="@null"
            android:text="@string/btn_code"
            android:textColor="@color/yellow"
            android:gravity="center"
            android:textSize="16sp" />


    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_psw"
        android:layout_marginLeft="@dimen/margin_right"
        android:layout_marginRight="@dimen/margin_right"
        android:layout_marginTop="@dimen/margin_top_middle"
        >

        <Button
            android:id="@+id/btn_registers"
            android:background="@drawable/btn_shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_regester"
            android:textSize="22sp"
            android:textColor="@color/yellow"
            android:gravity="center"
            />

    </RelativeLayout>


</RelativeLayout>