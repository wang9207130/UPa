<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--送出-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/margin_right">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                >
                <ImageView
                    android:id="@+id/img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginRight="@dimen/margin_right"
                    android:background="@mipmap/img_money"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/img"
                    android:text="@string/send_out"
                    android:textColor="@color/yellow"
                    android:textSize="22sp" />

            </RelativeLayout>


            <ImageView
                android:id="@+id/img_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_editor"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>
        <!--头像到id-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_avator"
                android:layout_width="@dimen/margin_top"
                android:layout_height="@dimen/margin_top"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:background="@mipmap/img_avator" />

            <RelativeLayout
                android:id="@+id/rl_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_avator"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="思念如雨"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_id"
                    android:background="@mipmap/img_sex" />

                <RelativeLayout
                    android:id="@+id/rl_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/sex"
                    android:background="@mipmap/img_level">

                    <ImageView
                        android:id="@+id/img_levels"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_left3"
                        android:background="@mipmap/img_start" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_toRightOf="@+id/img_levels"
                        android:text="2"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/upa_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_id"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_left3"
                android:text="Upa ID:445454564"
                android:textColor="@color/yellow"
                android:textSize="20sp"

                />


        </RelativeLayout>
        <!--个性签名-->
        <LinearLayout
            android:id="@+id/rl_other"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_login"
            android:layout_marginLeft="@dimen/margin_right"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="@dimen/margin"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/signature"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/white" />

        </LinearLayout>
        <!--签名+粉丝+关注-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin">

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="大家好才是真的好"
                android:textColor="@color/white" />

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_sign"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin">

                <RelativeLayout
                    android:id="@+id/rl_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/fans"
                        android:textColor="@color/yellow"

                        />

                    <TextView
                        android:id="@+id/tv_fans_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_fans"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="@color/yellow"

                        />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/view"
                    android:layout_width="1dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/margin_top_middle"
                    android:layout_marginTop="@dimen/margin"
                    android:layout_toRightOf="@+id/rl_fans"
                    android:background="@color/yellow" />

                <RelativeLayout
                    android:id="@+id/rl_attention"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_top_middle"
                    android:layout_toRightOf="@+id/view">

                    <TextView
                        android:id="@+id/tv_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/attention"
                        android:textColor="@color/yellow"

                        />

                    <TextView
                        android:id="@+id/tv_attention_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_attention"
                        android:layout_centerHorizontal="true"
                        android:text="0"
                        android:textColor="@color/yellow"

                        />


                </RelativeLayout>


            </RelativeLayout>


        </RelativeLayout>


        <!--四个方块-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_right"
            android:background="@color/yellow"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<!--u票贡献榜-->
            <RelativeLayout
                android:id="@+id/rl_contribution"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_contribution"
                    android:layout_width="@dimen/qav_title_bar_height"
                    android:layout_height="@dimen/qav_title_bar_height"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/margin_left10"
                    android:background="@mipmap/img_contriution" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_contribution"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/padding"
                    android:text="@string/contribution"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_contributions_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img_contribution"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/padding"
                    android:text="0个"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/yellow"></View>
<!--等级-->
            <RelativeLayout
                android:id="@+id/rl_levels"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_lv"
                    android:layout_width="@dimen/qav_title_bar_height"
                    android:layout_height="@dimen/qav_title_bar_height"
                    android:scaleType="centerCrop"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_left10"
                    android:background="@mipmap/img_my_level" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_lv"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/padding"
                    android:text="@string/level"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_lv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img_lv"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/padding"
                    android:text="0个"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />


            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
<!--收益-->
            <RelativeLayout
                android:id="@+id/rl_incomes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_income"
                    android:layout_width="@dimen/qav_title_bar_height"
                    android:layout_height="@dimen/qav_title_bar_height"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="@dimen/margin_left10"
                    android:background="@mipmap/img_income" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_income"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/padding"
                    android:text="@string/income"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_income_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img_income"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/padding"
                    android:text="0个"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />


            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/yellow"></View>
<!--充值-->
            <RelativeLayout
                android:id="@+id/rl_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_money"
                    android:layout_width="@dimen/qav_title_bar_height"
                    android:layout_height="@dimen/qav_title_bar_height"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/margin_left10"
                    android:scaleType="centerCrop"
                    android:background="@mipmap/img_recharge" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_money"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="@dimen/padding"
                    android:text="@string/money"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_money_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/img_money"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginTop="@dimen/padding"
                    android:text="0个"
                    android:textColor="@color/yellow"
                    android:textSize="18sp" />


            </RelativeLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_left10"
            android:background="@color/yellow"></View>


        <!--认证-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/certification"
                android:textColor="@color/yellow"
                android:textSize="18sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/applyforcertain"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"></View>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_right"
            android:background="@color/yellow"></View>


        <RelativeLayout
            android:id="@+id/rl_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/setting"
                android:textColor="@color/yellow"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_back_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/yellow"></View>


    </LinearLayout>


</ScrollView>